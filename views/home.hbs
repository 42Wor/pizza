<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Jee Bhai Café | High Quality Fast Food</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" />
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;800&display=swap" rel="stylesheet">
  <style>
    :root {
      --primary: #ff8c00; 
      --primary-glow: rgba(255, 140, 0, 0.4);
      --bg-dark: #0a0b10;
      --card-bg: #161b22;
      --text-main: #ffffff;
      --glass: rgba(255, 255, 255, 0.05);
    }
    * { margin:0; padding:0; box-sizing:border-box; font-family: 'Poppins', sans-serif; }
    body { background: var(--bg-dark); color: var(--text-main); line-height: 1.6; overflow-x: hidden; }
    .navbar { background: rgba(10, 11, 16, 0.9); backdrop-filter: blur(12px); padding: 12px 5%; display: flex; justify-content: space-between; align-items: center; position: sticky; top: 0; z-index: 1000; border-bottom: 1px solid var(--glass); }
    .nav-logo { display: flex; align-items: center; gap: 12px; text-decoration: none; }
    .nav-logo img { height: 45px; width: 45px; border-radius: 50%; border: 2px solid var(--primary); object-fit: cover; }
    .nav-logo span { color: var(--primary); font-weight: 800; font-size: 1.3rem; }
    .hero { height: 40vh; width: 100%; background: linear-gradient(rgba(0,0,0,0.4), var(--bg-dark)), url('/image/main.jpeg') center/cover; display: flex; flex-direction: column; justify-content: center; align-items: center; text-align: center; }
    .hero h1 { font-size: 3rem; font-weight: 900; text-transform: uppercase; }
    .category-bar { display: flex; justify-content: center; gap: 12px; padding: 20px; position: sticky; top: 70px; background: var(--bg-dark); z-index: 99; overflow-x: auto; }
    .cat-btn { padding: 10px 22px; border-radius: 50px; border: 1px solid var(--glass); background: var(--card-bg); color: white; cursor: pointer; font-weight: 600; white-space: nowrap; }
    .cat-btn.active { background: var(--primary); color: black; }
    .menu-container { padding: 20px 5%; max-width: 1400px; margin: auto; }
    .menu-grid { display: grid; grid-template-columns: repeat(auto-fill, minmax(280px, 1fr)); gap: 25px; }
    .food-card { background: var(--card-bg); border-radius: 24px; overflow: hidden; border: 1px solid var(--glass); transition: 0.3s; }
    .food-card:hover { transform: translateY(-5px); border-color: var(--primary); }
    .food-card img { width: 100%; height: 200px; object-fit: cover; }
    .card-info { padding: 20px; }
    .price-row { display: flex; justify-content: space-between; align-items: center; margin-top: 15px; }
    .price { font-size: 1.4rem; font-weight: 800; color: var(--primary); }
    .add-btn { background: var(--primary); color: black; border: none; padding: 10px 20px; border-radius: 12px; font-weight: 800; cursor: pointer; }
    .cart-trigger { position: fixed; bottom: 30px; right: 30px; width: 65px; height: 65px; background: var(--primary); border-radius: 20px; display: flex; align-items: center; justify-content: center; z-index: 1001; cursor: pointer; }
    .cart-count { position: absolute; top: -5px; right: -5px; background: white; color: black; width: 25px; height: 25px; border-radius: 50%; font-weight: 800; display: flex; align-items: center; justify-content: center; font-size: 0.7rem; }
    .cart-sidebar { position: fixed; top: 0; right: -100%; width: 380px; height: 100%; background: var(--card-bg); z-index: 1002; transition: 0.4s; padding: 25px; display: flex; flex-direction: column; border-left: 1px solid var(--glass); }
    .cart-sidebar.open { right: 0; }
    .cart-item { display: flex; gap: 15px; margin-bottom: 15px; align-items: center; background: rgba(0,0,0,0.2); padding: 10px; border-radius: 12px; }
    .cart-item img { width: 50px; height: 50px; border-radius: 8px; object-fit: cover; }
    .address-input { width: 100%; background: var(--bg-dark); border: 1px solid var(--glass); padding: 12px; border-radius: 10px; color: white; margin-bottom: 15px; }
    .checkout-btn { width: 100%; padding: 15px; background: #25D366; color: white; border: none; border-radius: 12px; font-weight: 800; cursor: pointer; }
    @media (max-width: 500px) { .cart-sidebar { width: 100%; } }
  </style>
</head>
<body>

  <nav class="navbar">
    <a href="/" class="nav-logo">
      <img src="/image/main.jpeg" alt="Logo">
      <span>JEE BHAI CAFE</span>
    </a>
  </nav>

  <div class="hero">
    <h1>JEE BHAI CAFE</h1>
    <p style="color:var(--primary); font-weight:bold">HIGH QUALITY • LOW COST</p>
  </div>

  <div class="category-bar">
    <button class="cat-btn active" data-type="all">All Items</button>
    <button class="cat-btn" data-type="pizza">Pizzas</button>
    <button class="cat-btn" data-type="burger">Burgers</button>
  </div>

  <main class="menu-container">
    <div class="menu-grid" id="menu-grid"></div>
  </main>

  <div class="cart-trigger" id="cart-trigger">
    <i class="fas fa-shopping-bag" style="font-size: 1.5rem; color: black"></i>
    <div class="cart-count" id="cart-count">0</div>
  </div>

  <div class="cart-sidebar" id="cart-sidebar">
    <div style="display:flex; justify-content:space-between; margin-bottom:20px">
        <h2>Your Order</h2>
        <i class="fas fa-times" id="close-cart" style="cursor:pointer"></i>
    </div>
    <div id="cart-items-list" style="flex-grow:1; overflow-y:auto"></div>
    <div style="padding-top:15px; border-top:1px solid var(--glass)">
        <div style="display:flex; justify-content:space-between; font-size:1.2rem; font-weight:800; margin-bottom:15px">
            <span>Total:</span> <span id="cart-total" style="color:var(--primary)">Rs 0</span>
        </div>
        <textarea class="address-input" id="delivery-address" rows="3" placeholder="Address & Phone Number..."></textarea>
        <button class="checkout-btn" id="whatsapp-checkout">ORDER VIA WHATSAPP</button>
    </div>
  </div>

  <script>
    // Pure Safe Javascript
    const menuData = {{{json menu}}};
    let cart = [];

    function renderMenu(type = 'all') {
      const grid = document.getElementById('menu-grid');
      grid.innerHTML = '';
      const items = (type === 'all') ? menuData : menuData.filter(i => i.type === type);
      
      items.forEach(item => {
        const div = document.createElement('div');
        div.className = 'food-card';
        div.innerHTML = `
          <img src="${item.image}" onerror="this.src='https://placehold.co/400x300?text=Food'">
          <div class="card-info">
            <h3 style="text-transform:uppercase">${item.name}</h3>
            <div class="price-row">
              <span class="price">Rs ${item.price}</span>
              <button class="add-btn" onclick="addToCart(${item.id})">ADD +</button>
            </div>
          </div>
        `;
        grid.appendChild(div);
      });
    }

    window.addToCart = function(id) {
      const p = menuData.find(x => x.id === id);
      if(p) {
        cart.push({...p, t: Date.now()});
        updateUI();
      }
    };

    window.remove = function(idx) {
      cart.splice(idx, 1);
      updateUI();
    };

    function updateUI() {
      document.getElementById('cart-count').innerText = cart.length;
      const list = document.getElementById('cart-items-list');
      list.innerHTML = '';
      let total = 0;
      cart.forEach((item, i) => {
        total += item.price;
        list.innerHTML += `
          <div class="cart-item">
            <img src="${item.image}">
            <div style="flex-grow:1">
                <div style="font-size:0.9rem">${item.name}</div>
                <div style="color:var(--primary); font-weight:bold">Rs ${item.price}</div>
            </div>
            <i class="fas fa-trash" onclick="remove(${i})" style="color:red; cursor:pointer"></i>
          </div>`;
      });
      document.getElementById('cart-total').innerText = "Rs " + total;
    }

    document.getElementById('cart-trigger').onclick = () => document.getElementById('cart-sidebar').classList.add('open');
    document.getElementById('close-cart').onclick = () => document.getElementById('cart-sidebar').classList.remove('open');

    document.querySelectorAll('.cat-btn').forEach(b => {
      b.onclick = () => {
        document.querySelectorAll('.cat-btn').forEach(x => x.classList.remove('active'));
        b.classList.add('active');
        renderMenu(b.getAttribute('data-type'));
      };
    });

    document.getElementById('whatsapp-checkout').onclick = () => {
      const addr = document.getElementById('delivery-address').value;
      if(cart.length === 0) return alert("Cart is empty");
      if(!addr) return alert("Enter address");

      let msg = "NEW ORDER: JEE BHAI CAFE\n\n";
      cart.forEach((item, i) => { msg += (i+1) + ". " + item.name + " (Rs " + item.price + ")\n"; });
      const total = cart.reduce((a, b) => a + b.price, 0);
      msg += "\nTOTAL BILL: Rs " + total + "\nADDRESS: " + addr;
      
      window.open("https://wa.me/923410099882?text=" + encodeURIComponent(msg));
    };

    renderMenu();
  </script>
</body>
</html>